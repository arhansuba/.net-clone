     body {
    font-family: Arial, sans-serif;
    background-color: #f0f0f0;
    margin: 0;
    padding: 0;
}

header {
    background-color: #333;
    color: #fff;
    text-align: center;
    padding: 10px 0;
}

header h1 {
    margin: 0;
    font-size: 24px;
}

nav ul {
    list-style: none;
    padding: 0;
}

nav ul li {
    display: inline;
    margin-right: 20px;
}

nav ul li:last-child {
    margin-right: 0;
}

nav ul li a {
    text-decoration: none;
    color: #fff;
    font-weight: bold;
}

main {
    max-width: 1200px;
    margin: 20px auto;
    display: flex;
    justify-content: space-between;
}

section {
    flex: 2;
    background-color: #fff;
    padding: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

h2 {
    font-size: 20px;
}

.course-card {
    background-color: #fff;
    border: 1px solid #ccc;
    padding: 10px;
    margin-bottom: 20px;
}

.course-card img {
    max-width: 100%;
    height: auto;
}

.course-card h3 {
    font-size: 18px;
    margin: 10px 0;
}

.course-card p {
    font-size: 14px;
    color: #777;
}

.course-card span {
    font-size: 16px;
    font-weight: bold;
    color: #333;
}

.buy-button {
    display: block;
    background-color: #f76d57;
    color: #fff;
    text-align: center;
    padding: 10px;
    text-decoration: none;
    font-weight: bold;
}

.buy-button:hover {
    background-color: #f45133;
}

aside {
    flex: 1;
    background-color: #fff;
    padding: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

aside h2 {
    font-size: 20px;
}

aside ul {
    list-style: none;
    padding: 0;
}

aside ul li {
    margin-bottom: 10px;
}

aside ul li a {
    text-decoration: none;
    color: #333;
    font-weight: bold;
}

footer {
    text-align: center;
    background-color: #333;
    color: #fff;
    padding: 10px 0;
}

section h2 {
    margin-top: 20px;
    font-size: 20px;
}

.search-filter {
    display: flex;
    align-items: center;
}

#searchInput,
#categoryFilter,
#priceFilter,
#popularityFilter,
button {
    margin-right: 10px;
}

#searchInput {
    padding: 5px;
}

button {
    background-color: #007bff;
    color: #fff;
    border: none;
    padding: 8px 16px;
    cursor: pointer;
}

button:hover {
    background-color: #0056b3;
}

